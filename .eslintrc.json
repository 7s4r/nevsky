{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn"],
    "no-console": ["off"]
  },
  "overrides": [
    {
      "files": ["**/*.config.js", "tests/**/*.js"],
      "env": { "node": true }
    }
  ]
}
